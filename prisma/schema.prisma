generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Funcionario{
  matricula Int @id @unique
  nome String 
  salario Float
  endereco String
  departamento Departamento @relation(fields: [idDepartamento], references: [id])
  idDepartamento String
}
model Departamento {
  id String @id @unique
  nome String
  funcionarios Funcionario[]
}